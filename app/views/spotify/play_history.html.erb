<h1>Play History</h1>
<p><%= link_to "Dashboard", spotify_dashboard_path %></p>
<%= button_to 'Fetch Recently Played', spotify_refresh_recently_played_path, method: :get %>
<table>
  <tr>
    <th>#</th>
    <th>Track</th>
    <th>Artists</th>
    <th>Played At</th>
  </tr>
  <% @play_history.each_with_index do |t, index| %>
    <tr>
      <td><%= index + 1 %></td>
      <td><%= t.name %></td>
      <td><%= t.artists %></td>
      <td><%= t.played_at.in_time_zone("Pacific Time (US & Canada)").to_datetime %></td>
    </tr>
  <% end %>
</table>